<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="bootstrap.css">
    <script src="createPost.js" defer></script>
    <title>creating new post</title>
    <style>
        body {
            margin-top: 20px;
            color: #1a202c;
            text-align: left;
            background-color: #e2e8f0;
        }

        .main-body {
            padding: 15px;
        }

        .card {
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, .1), 0 1px 2px 0 rgba(0, 0, 0, .06);
        }

        .card {
            position: relative;
            display: flex;
            flex-direction: column;
            min-width: 0;
            word-wrap: break-word;
            background-color: #fff;
            background-clip: border-box;
            border: 0 solid rgba(0, 0, 0, .125);
            border-radius: .25rem;
        }

        .card-body {
            flex: 1 1 auto;
            min-height: 1px;
            padding: 1rem;
        }

        .gutters-sm {
            margin-right: -8px;
            margin-left: -8px;
        }

        .gutters-sm>.col,
        .gutters-sm>[class*=col-] {
            padding-right: 8px;
            padding-left: 8px;
        }

        .mb-3,
        .my-3 {
            margin-bottom: 1rem !important;
        }

        .bg-gray-300 {
            background-color: #e2e8f0;
        }

        .h-100 {
            height: 100% !important;
        }

        .shadow-none {
            box-shadow: none !important;
        }

        textarea {
            border: none;
            outline: none;
            resize: none;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="main-body">
            <nav aria-label="breadcrumb" class="main-breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/home">home</a></li>
                    <li class="breadcrumb-item"><a href="/profile">profile</a></li>
                </ol>
            </nav>
            <div class="gutters-sm">
                <div class="card my-4">
                    <div class="card-body">
                        <% if (content.length>0) { %>
                            <% content.forEach(element=> { %>
                                <h4 class="text-dark">
                                    <%= element.title %>
                                </h4>
                                total applications: <span
                                    class="fw-bold text-<%= element.total>0 ?'success':'danger'  %>">
                                    <%= element.total %>
                                </span>
                                <br>
                                posted date: <span class="fw-bold text-secondary">
                                    <%= element.createdDate %>
                                </span>
                                <br><br>
                                <a href="/jobs/Applications/<%= element.ID %>">view more details</a>
                                <% }) %>
                                    <% }else{ %>

                                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>